[Unit]
Description=Solana Transaction Verification Middleware
After=network.target camera-api.service

[Service]
User=azuolas
Group=azuolas
WorkingDirectory=/home/azuolas/solana-middleware
Environment="PATH=/home/azuolas/.local/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/python3 middleware.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 